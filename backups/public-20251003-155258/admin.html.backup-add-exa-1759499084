    <script>
        // Tab switching
        function showTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
        }
        
        // Admin authentication check
        async function checkAdminAuth() {
            try {
                const response = await fetch('/api/auth/status', {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (!data.isAuthenticated || !data.isAdmin) {
                    alert('Please login as admin first');
                    window.location.href = '/login';
                    return false;
                }
                return true;
            } catch (error) {
                console.error('Auth check error:', error);
                alert('Authentication error. Please login first.');
                window.location.href = '/login';
                return false;
            }
        }
        
        // API configuration
        document.getElementById('apiForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/api/admin/api-config', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({
                        cerebras_api_key: formData.get('cerebras_api_key')
                    })
                });
                
                if (response.ok) {
                    alert('API key updated successfully');
                    e.target.reset();
                } else {
                    alert('Error updating API key');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });
        
        async function testApiConnection() {
            const statusEl = document.getElementById('apiStatus');
            statusEl.textContent = 'Testing...';
            statusEl.className = 'badge badge-warning';
            
            try {
                const response = await fetch('/api/admin/api-test', {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (data.status === 'active') {
                    statusEl.textContent = 'API Active';
                    statusEl.className = 'badge badge-success';
                } else {
                    statusEl.textContent = 'API Inactive';
                    statusEl.className = 'badge badge-error';
                }
            } catch (error) {
                statusEl.textContent = 'Test Failed';
                statusEl.className = 'badge badge-error';
            }
        }
        
        // Load statistics
        async function loadStats() {
            try {
                const response = await fetch('/api/admin/stats', {
                    credentials: 'include'
                });
                const stats = await response.json();
                
                document.getElementById('totalUsers').textContent = stats.totalUsers || 0;
                document.getElementById('activeAlerts').textContent = stats.activeAlerts || 0;
                document.getElementById('emailsSent').textContent = stats.emailsSent || 0;
                document.getElementById('documentsProcessed').textContent = stats.documentsProcessed || 0;
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }
        
        // Load topics
        async function loadTopics() {
            try {
                const response = await fetch('/api/admin/topics', {
                    credentials: 'include'
                });
                const topics = await response.json();
                
                // Update topic select in sources form
                const topicSelect = document.querySelector('select[name="topicAreaId"]');
                const sponsorTopicSelect = document.querySelector('select[name="topicAreas"]');
                
                topicSelect.innerHTML = '<option value="">Select topic area...</option>';
                sponsorTopicSelect.innerHTML = '';
                
                topics.forEach(topic => {
                    topicSelect.innerHTML += `<option value="${topic.id}">${topic.name}</option>`;
                    sponsorTopicSelect.innerHTML += `<option value="${topic.id}">${topic.name}</option>`;
                });
                
                // Display topics list
                const topicsList = document.getElementById('topicsList');
                topicsList.innerHTML = topics.map(topic => `
                    <div class="source-item">
                        <div>
                            <strong>${topic.name}</strong>
                            <br><small>${topic.description || 'No description'}</small>
                            <br><small class="text-xs">Keywords: ${topic.keywords ? topic.keywords.join(', ') : 'None'}</small>
                        </div>
                        <button class="btn btn-danger btn-sm" onclick="deleteTopic('${topic.id}')">Delete</button>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading topics:', error);
            }
        }
        
        // Load sources
        async function loadSources() {
            try {
                const response = await fetch('/api/admin/sources', {
                    credentials: 'include'
                });
                const sources = await response.json();
                
                const sourcesList = document.getElementById('sourcesList');
                sourcesList.innerHTML = sources.map(source => `
                    <div class="source-item">
                        <div>
                            <strong>${source.name}</strong> - <span class="text-muted">${source.url}</span>
                            <br><small>Type: ${source.type} | Topic: ${source.topicArea ? source.topicArea.name : 'None'}</small>
                        </div>
                        <div class="flex gap-2">
                            <button class="btn btn-sm" onclick="processSource('${source.id}')">Process</button>
                            <button class="btn btn-danger btn-sm" onclick="deleteSource('${source.id}')">Delete</button>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading sources:', error);
            }
        }
        
        // Load users
        async function loadUsers() {
            try {
                const response = await fetch('/api/admin/users', {
                    credentials: 'include'
                });
                const users = await response.json();
                
                const usersTableBody = document.getElementById('usersTableBody');
                
                if (users.length === 0) {
                    usersTableBody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No users found</td></tr>';
                    return;
                }
                
                usersTableBody.innerHTML = users.map(user => `
                    <tr>
                        <td>${user.email}</td>
                        <td>${user.name || '<span class="text-muted">N/A</span>'}</td>
                        <td>${user.alertsCount || 0}</td>
                        <td>
                            ${user.interestAreas && user.interestAreas.length > 0 
                                ? user.interestAreas.map(k => `<span class="badge">${k}</span>`).join(' ')
                                : '<span class="text-muted">None</span>'
                            }
                        </td>
                        <td><span class="badge ${user.isActive ? 'badge-success' : 'badge-warning'}">${user.isActive ? 'Active' : 'Inactive'}</span></td>
                        <td>
                            <button class="btn btn-danger btn-sm" onclick="deleteUser('${user.id}')">Delete</button>
                        </td>
                    </tr>
                `).join('');
            } catch (error) {
                console.error('Error loading users:', error);
                document.getElementById('usersTableBody').innerHTML = '<tr><td colspan="6" class="text-center text-muted">Error loading users</td></tr>';
            }
        }
        
        // Topic form submission
        document.getElementById('topicForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/api/admin/topics', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({
                        name: formData.get('name'),
                        description: formData.get('description'),
                        keywords: formData.get('keywords')
                    })
                });
                
                if (response.ok) {
                    e.target.reset();
                    loadTopics();
                    alert('Topic created successfully');
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error creating topic: ' + error.message);
            }
        });
        
        // Source form submission
        document.getElementById('sourceForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/api/admin/sources', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({
                        topicAreaId: formData.get('topicAreaId'),
                        name: formData.get('name'),
                        url: formData.get('url'),
                        type: formData.get('type')
                    })
                });
                
                if (response.ok) {
                    e.target.reset();
                    loadSources();
                    alert('Source created successfully');
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error creating source: ' + error.message);
            }
        });
        
        // Sponsor form submission
        document.getElementById('sponsorForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            const topicAreas = Array.from(e.target.topicAreas.selectedOptions).map(opt => opt.value);
            
            try {
                const response = await fetch('/api/admin/sponsors', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({
                        title: formData.get('title'),
                        content: formData.get('content'),
                        link: formData.get('link'),
                        topicAreas: topicAreas
                    })
                });
                
                if (response.ok) {
                    e.target.reset();
                    alert('Sponsor created successfully');
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error creating sponsor: ' + error.message);
            }
        });
        
        // Delete functions
        async function deleteTopic(id) {
            if (!confirm('Are you sure?')) return;
            
            try {
                const response = await fetch(`/api/admin/topics/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                if (response.ok) {
                    loadTopics();
                } else {
                    alert('Error deleting topic');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
        
        async function deleteSource(id) {
            if (!confirm('Are you sure?')) return;
            
            try {
                const response = await fetch(`/api/admin/sources/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                if (response.ok) {
                    loadSources();
                } else {
                    alert('Error deleting source');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
        
        async function deleteUser(id) {
            if (!confirm('Are you sure you want to delete this user? This cannot be undone.')) return;
            
            try {
                const response = await fetch(`/api/admin/users/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                if (response.ok) {
                    alert('User deleted successfully');
                    loadUsers();
                    loadStats(); // Update stats
                } else {
                    const error = await response.json();
                    alert('Error deleting user: ' + error.error);
                }
            } catch (error) {
                alert('Error deleting user: ' + error.message);
            }
        }
        
        // Process single source
        async function processSource(id) {
            const statusEl = document.getElementById('processStatus');
            statusEl.textContent = 'Processing source...';
            
            try {
                const response = await fetch(`/api/admin/sources/${id}/process`, {
                    method: 'POST',
                    credentials: 'include'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    statusEl.textContent = result.message;
                    setTimeout(() => {
                        statusEl.textContent = '';
                        loadOfficialDocuments(); // Refresh documents if on Official tab
                    }, 3000);
                } else {
                    statusEl.textContent = 'Error: ' + result.error;
                }
            } catch (error) {
                statusEl.textContent = 'Error: ' + error.message;
            }
        }
        
        // Process all sources
        async function processAllSources() {
            const statusEl = document.getElementById('processStatus');
            statusEl.textContent = 'Processing all sources...';
            
            try {
                const response = await fetch('/api/admin/process-sources', {
                    method: 'POST',
                    credentials: 'include'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    statusEl.textContent = result.message;
                    setTimeout(() => {
                        statusEl.textContent = '';
                        loadOfficialDocuments(); // Refresh documents if on Official tab
                        loadStats(); // Update stats
                    }, 3000);
                } else {
                    statusEl.textContent = 'Error: ' + result.error;
                }
            } catch (error) {
                statusEl.textContent = 'Error: ' + error.message;
            }
        }
        
        // Load official documents
        async function loadOfficialDocuments() {
            try {
                const topicId = document.getElementById('officialTopicSelect').value;
                const url = topicId 
                    ? `/api/admin/documents?topicId=${topicId}`
                    : '/api/admin/documents';
                
                const response = await fetch(url, {
                    credentials: 'include'
                });
                const documents = await response.json();
                
                const documentsList = document.getElementById('officialDocumentsList');
                
                if (documents.length === 0) {
                    documentsList.innerHTML = '<p class="text-muted text-center">No documents processed yet.</p>';
                    return;
                }
                
                documentsList.innerHTML = documents.map(doc => `
                    <div class="document-card">
                        <h4>${doc.title}</h4>
                        <div class="document-meta">
                            ID: ${doc.code} | Source: ${doc.sourceName} | Topic: ${doc.topicName} | Date: ${new Date(doc.processedAt).toLocaleDateString()}
                        </div>
                        <div class="document-summary">
                            ${doc.summary || 'No summary available'}
                        </div>
                        <div class="document-actions">
                            <a href="/${doc.code}.html" target="_blank">View HTML Page â†’</a>
                            <a href="/api/documents/${doc.id}/markdown" target="_blank">Download Markdown</a>
                            ${doc.originalUrl ? `<a href="${doc.originalUrl}" target="_blank">Original Source</a>` : ''}
                            <button onclick="deleteDocument('${doc.id}', '${doc.code}')" class="btn btn-danger btn-sm">Delete</button>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading documents:', error);
                document.getElementById('officialDocumentsList').innerHTML = '<p class="text-muted text-center">Error loading documents</p>';
            }
        }
        
        // Update topic selects to include official tab
        async function loadTopicsWithOfficial() {
            await loadTopics();
            
            try {
                const response = await fetch('/api/admin/topics', {
                    credentials: 'include'
                });
                const topics = await response.json();
                
                const officialTopicSelect = document.getElementById('officialTopicSelect');
                officialTopicSelect.innerHTML = '<option value="">All Topics</option>';
                
                topics.forEach(topic => {
                    officialTopicSelect.innerHTML += `<option value="${topic.id}">${topic.name}</option>`;
                });
            } catch (error) {
                console.error('Error loading topics for official tab:', error);
            }
        }
        
        // Delete document function
        async function deleteDocument(documentId, documentCode) {
            if (!confirm(`Are you sure you want to delete document ${documentCode}? This cannot be undone.`)) {
                return;
            }
            
            try {
                const response = await fetch(`/api/admin/documents/${documentId}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('Document deleted successfully');
                    loadOfficialDocuments(); // Refresh the list
                    loadStats(); // Update stats
                } else {
                    alert('Error deleting document: ' + result.error);
                }
            } catch (error) {
                alert('Error deleting document: ' + error.message);
            }
        }
        
        // Initialize on load
        window.addEventListener('DOMContentLoaded', async () => {
            const isAuthenticated = await checkAdminAuth();
            if (isAuthenticated) {
                loadStats();
                loadTopicsWithOfficial();
                loadSources();
                loadUsers();
                
                // Refresh stats every 30 seconds
                setInterval(loadStats, 30000);
            }
        });
    </script>
</body>
</html>