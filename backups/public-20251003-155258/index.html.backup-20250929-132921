    <!-- Create Alert Modal -->
    <div id="createAlertModal" class="modal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal()">&times;</button>
            <h2 style="margin-bottom: 1rem; font-size: 1.5rem; font-weight: 600;">Create Your Intelligence Alert</h2>
            
            <div id="successMessage" class="success-message" style="display: none;">
                ✅ Alert created! Please check your email to verify your account.
            </div>
            
            <form id="createAlertForm">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required>
                    <div class="form-help">We'll send your weekly intelligence reports here</div>
                </div>
                
                <div class="form-group">
                    <label for="alertName">Alert Name</label>
                    <input type="text" id="alertName" name="name" required>
                    <div class="form-help">Give your alert a memorable name</div>
                </div>
                
                <div class="form-group">
                    <label for="keywords">Keywords / Topics</label>
                    <textarea id="keywords" name="keywords" required placeholder="Enter keywords separated by commas"></textarea>
                    <div class="form-help">What specific topics would you like to track?</div>
                </div>
                
                <div class="form-group">
                    <label for="existingUser">
                        <input type="checkbox" id="existingUser" onchange="togglePasswordField()">
                        I already have an account
                    </label>
                </div>
                
                <div class="form-group" id="passwordGroup" style="display: none;">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password">
                    <div class="form-help">Enter your existing password to add this alert to your account</div>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Alert</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Hero form submission
        document.getElementById('heroForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const keywords = document.getElementById('heroKeywords').value;
            
            // Pre-fill the modal form
            document.getElementById('keywords').value = keywords;
            document.getElementById('alertName').value = keywords.split(',')[0].trim() + ' Alert';
            
            // Open modal
            document.getElementById('createAlertModal').style.display = 'block';
        });

        // Create alert form submission
        document.getElementById('createAlertForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const isExistingUser = document.getElementById('existingUser').checked;
            
            try {
                let response;
                
                if (isExistingUser) {
                    // Login first
                    const loginResponse = await fetch('/api/auth/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include',
                        body: JSON.stringify({
                            email: formData.get('email'),
                            password: formData.get('password')
                        })
                    });
                    
                    if (!loginResponse.ok) {
                        throw new Error('Invalid login credentials');
                    }
                    
                    // Create alert for logged-in user
                    response = await fetch('/api/alerts', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include',
                        body: JSON.stringify({
                            name: formData.get('name'),
                            keywords: formData.get('keywords'),
                            frequency: 'weekly'
                        })
                    });
                } else {
                    // Register new user and create alert
                    const registerResponse = await fetch('/api/auth/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            email: formData.get('email'),
                            password: generatePassword()
                        })
                    });
                    
                    if (!registerResponse.ok) {
                        const error = await registerResponse.json();
                        throw new Error(error.error || 'Registration failed');
                    }
                    
                    // Show success message
                    document.getElementById('successMessage').style.display = 'block';
                    document.getElementById('createAlertForm').reset();
                    
                    // Store alert data to create after verification
                    localStorage.setItem('pendingAlert', JSON.stringify({
                        name: formData.get('name'),
                        keywords: formData.get('keywords')
                    }));
                    
                    setTimeout(() => {
                        closeModal();
                    }, 3000);
                    return;
                }
                
                if (response.ok) {
                    // Redirect to dashboard
                    window.location.href = '/dashboard';
                } else {
                    throw new Error('Failed to create alert');
                }
                
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        // Toggle password field
        function togglePasswordField() {
            const passwordGroup = document.getElementById('passwordGroup');
            const passwordInput = document.getElementById('password');
            const isExisting = document.getElementById('existingUser').checked;
            
            passwordGroup.style.display = isExisting ? 'block' : 'none';
            passwordInput.required = isExisting;
        }

        // Close modal
        function closeModal() {
            document.getElementById('createAlertModal').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('createAlertModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Generate random password for new users
        function generatePassword() {
            return 'Intel' + Math.random().toString(36).substr(2, 9) + '!';
        }
    </script>
</body>
