    <script>
        // Direct function to handle hero form submission
        function submitHeroForm() {
            const keywords = document.getElementById('heroKeywords').value;
            if (!keywords) {
                document.getElementById('heroKeywords').focus();
                return;
            }
            
            // Pre-fill the modal form
            document.getElementById('keywords').value = keywords;
            document.getElementById('alertName').value = keywords.split(',')[0].trim() + ' Alert';
            
            // Open modal
            document.getElementById('createAlertModal').style.display = 'block';
        }
        // Wait for DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, attaching event handlers...');
            
            // Hero form submission
            const heroForm = document.getElementById('heroForm');
            if (heroForm) {
                heroForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    console.log('Hero form submitted');
                    
                    const keywords = document.getElementById('heroKeywords').value;
                    
                    // Pre-fill the modal form
                    document.getElementById('keywords').value = keywords;
                    document.getElementById('alertName').value = keywords.split(',')[0].trim() + ' Alert';
                    
                    // Open modal
                    document.getElementById('createAlertModal').style.display = 'block';
                    
                    return false; // Extra prevention
                });
            } else {
                console.error('Hero form not found!');
            }
            
            // Create alert form submission
            const createAlertForm = document.getElementById('createAlertForm');
            if (createAlertForm) {
                createAlertForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const submitBtn = e.target.querySelector('button[type="submit"]');
                    const submitText = document.getElementById('submitText');
                    const submitSpinner = document.getElementById('submitSpinner');
                    
                    // Show loading state
                    submitBtn.disabled = true;
                    submitText.style.display = 'none';
                    submitSpinner.style.display = 'inline';
                    
                    const formData = new FormData(e.target);
                    
                    try {
                        // Create user and alert
                        const response = await fetch('/api/auth/register-with-alert', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                email: formData.get('email'),
                                alertName: formData.get('name'),
                                keywords: formData.get('keywords')
                            })
                        });
                        
                        const data = await response.json();
                        
                        if (response.ok) {
                            document.getElementById('successMessage').style.display = 'block';
                            e.target.reset();
                            setTimeout(() => {
                                closeModal();
                            }, 3000);
                        } else {
                            alert(data.error || 'Failed to create alert');
                        }
                    } catch (error) {
                        alert('Error: ' + error.message);
                    } finally {
                        // Reset button state
                        submitBtn.disabled = false;
                        submitText.style.display = 'inline';
                        submitSpinner.style.display = 'none';
                    }
                });
            }
            
            // Check for messages in URL
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('verified') === 'true') {
                alert('Email verified! You can now login to manage your alerts.');
            }
        });
        
        // Modal close function
        function closeModal() {
            document.getElementById('createAlertModal').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }
        
        // Allow closing modal by clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('createAlertModal');
            if (event.target == modal) {
                closeModal();
            }
        }
    </script>
